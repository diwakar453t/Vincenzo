# ──────────────────────────────────────────────────────────────────────────────
# PreSkool ERP — Environment Variables Template
# Copy to .env and fill in REQUIRED values before running the server.
# NEVER commit .env to version control.
# ──────────────────────────────────────────────────────────────────────────────

# ── Application ───────────────────────────────────────────────────────────────
APP_NAME=PreSkool ERP
APP_VERSION=1.0.0
APP_ENV=development          # Set to 'production' in production
DEBUG=False                  # NEVER set True in production

# ── Database ─────────────────────────────────────────────────────────────────
# Development (SQLite):
DATABASE_URL=sqlite:///./preskool.db
# Production (PostgreSQL — highly recommended):
# DATABASE_URL=postgresql://user:password@host:5432/preskool_db

# ── JWT Authentication (REQUIRED) ────────────────────────────────────────────
# Generate: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_BEFORE_PRODUCTION_USE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Encryption (REQUIRED for GDPR field-level encryption in production) ───────
# Generate: python3 -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_MASTER_KEY=
ENCRYPTION_SALT=change-this-per-deployment-unique-salt

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── CORS ─────────────────────────────────────────────────────────────────────
# Development origins are set by default. Override in production.
# CORS_PRODUCTION_ORIGINS=["https://your-domain.com"]

# ── File Storage ─────────────────────────────────────────────────────────────
UPLOAD_DIR=uploads
# S3_ENABLED=false
# S3_BUCKET=preskool-uploads
# S3_REGION=ap-south-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# ── Payments ─────────────────────────────────────────────────────────────────
# RAZORPAY_ENABLED=false
# RAZORPAY_KEY_ID=
# RAZORPAY_KEY_SECRET=

# ── Email / Notifications ─────────────────────────────────────────────────────
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# ── OpenTelemetry (optional tracing) ─────────────────────────────────────────
OTEL_ENABLED=False
# OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# ── GDPR ─────────────────────────────────────────────────────────────────────
GDPR_CONTACT_EMAIL=privacy@yourdomain.com
